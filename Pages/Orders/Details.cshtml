@model Cucui_Elena_Proiect_Web.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Client.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Total)
        </dd>
    </div>

<div>
    <a asp-page="../OrderLines/Create">Add New Line</a>
    <!-- asp-route-orderid="Model.Order.ID" -->
</div>
    <!-- Afisam order lines -->

    <table class="table">
        <thead>
            <tr>
                <th>

                   
                        Order
                </th>

                <th>
                    Product
                </th>

                <th>
                    Unit Price
                </th>
                <th>
                    Total
                </th>

                    
            </tr>
                </thead>

        <tbody>
  
        @foreach (var item in Model.Order.OrderLines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.ID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Product.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

                <td>
                
                    @Html.DisplayFor(modelItem => item.Total)
                </td>

                <td>
                   
                <a asp-page="../OrderLines/Edit" asp-route-id="@item.ID">Edit Line</a>
                </td>
            </tr>



        }
            </tbody>
        </table>
        


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.ID">Edit</a>
    <a asp-page="./Delete" asp-route-id="@Model.Order.ID">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
